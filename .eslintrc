{
  "env": { "node": true, "commonjs": true },
  "parser": "@typescript-eslint/parser",
  "parserOptions": { "ecmaVersion": 12 },
  "plugins": ["@typescript-eslint"],
  "extends": [
    "airbnb-base",
    "prettier",
    "plugin:prettier/recommended"
  ],
  "rules": {
    // Disabled to import files
    "import/no-unresolved": 0,
    "import/extensions": 0,
    "import/prefer-default-export": 0,

    // Delete keys from objects with map
    "no-param-reassign": 0,

    // Disabled to iterate over Regex matches
    "no-cond-assign": 0,

    // Disabled because of jest test suite
    "no-undef": 0,

    // development
    "no-console": 0
  }
}
